{
    "version": 1,
    "formatters": {
        "default": {
            "format": "[%(asctime)s] %(levelname)s: %(message)s"
        },
        "error": {
            "format": "[%(asctime)s] %(levelname)s in %(pathname)s:\n  module:%(module)s\n  line:%(lineno)s\n  message:%(message)s\n"
        }
    },
    "handlers": {
        "wsgi": {
            "class": "logging.StreamHandler",
            "stream": "ext://flask.logging.wsgi_errors_stream",
            "formatter": "default"
        },
        "file": {
            "class": "logging.FileHandler",
            "level": "ERROR",
            "formatter": "error",
            "filename": "server/app/logs/errors.log"
        }
    },
    "root": {
        "level": "INFO",
        "handlers": [
            "wsgi",
            "file"
        ]
    }
}
